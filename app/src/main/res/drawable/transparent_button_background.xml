<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius" />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="@dimen/button_border" android:color="@color/gray_600" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius" />
            <solid android:color="@color/gray_600" />
            <stroke android:width="@dimen/button_border" android:color="#777C80" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius" />
            <solid android:color="@color/gray_600" />
            <stroke android:width="@dimen/button_border" android:color="#777C80" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius" />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="@dimen/button_border" android:color="@color/colorAccent" />
        </shape>
    </item>
</selector>
