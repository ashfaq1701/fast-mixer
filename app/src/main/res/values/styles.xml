<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.RecordingScreenControlButton">
        <item name="android:background">@drawable/circular_button_background</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="IconButton" parent="AppTheme">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/bg_loading_progress</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">@integer/progress_indeterminate_duration</item>
        <item name="android:minWidth">@dimen/progress_bar_min_width</item>
        <item name="android:minHeight">@dimen/progress_bar_min_height</item>
        <item name="android:mirrorForRtl">false</item>
    </style>

    <style name="DialogWindow" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

</resources>
